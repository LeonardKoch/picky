{
    "parser" : "babel-eslint",
    "plugins" : [],
    "extends" : "airbnb",
    "env": {
        "browser": true,
        "node": true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "rules" : {
        "no-console" : [0],
        "comma-dangle": ["error", "never"],
        "no-multi-spaces": [
            2,
            {
                "exceptions": {
                    "VariableDeclarator": true,
                    "Property": true,
                    "ImportDeclaration": true
                }
            }
        ],
        "indent": [2, 4, {
            "SwitchCase": 1,
            "VariableDeclarator": 1
        }],
        "class-methods-use-this" : [0],
        "arrow-parens" : [0],
        "key-spacing": [0, {
            "beforeColon": false,
            "afterColon": true
        }],
        "no-param-reassign": ["error", {
            "props": false
        }],
        "no-use-before-define": [0],
        "max-len": ["error", 160, 2, {
            "ignoreUrls": true,
            "ignoreComments": false
        }]
    }
}
